{% extends 'base.html.twig' %}

{% block body %}
    <div class="Layout-row-end-center">
        <div class="Title">
            <div>Date du jour : {{ today|date('d/m/Y') }}</div>
            <div>Participant : {{ user.prenom }} {{ user.nom }}</div>
        </div>
    </div>
    <div>
        <div class="Title">Filtrer les sorties</div>
        <div class="flex">

            <div class="Layout-column-start-start">
                <div class="Layout-row-start-center">
                    <div>Site :</div>
                    <select>
                        {% for site in sites %}
                            <option value="{{ site.id }}">{{ site.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="Layout-row-start-center">
                    <div>Le nom de la sortie contient:</div>
                    <label>
                        <input/>
                    </label>
                </div>
                <div class="Layout-row-start-center">
                    <div>Entre</div>
                    <input type="date" name="dateDebut"/>
                    <div> et</div>
                    <input type="date" name="dateFin"/>
                </div>
            </div>

            <div class="Layout-column-start-start">
                <div class="Layout-row-start-center">
                    <input type="checkbox" name="cb1"/>
                    <div>Sorties dont je suis l'organisateur</div>
                </div>
                <div class="Layout-row-start-center">
                    <input type="checkbox" name="cb2"/>
                    <div>Sorties auxquelles je suis inscrit</div>
                </div>
                <div class="Layout-row-start-center">
                    <input type="checkbox" name="cb3"/>
                    <div>Sorties auxquelles je ne suis pas inscrit</div>
                </div>
                <div class="Layout-row-start-center">
                    <input type="checkbox" name="cb3"/>
                    <div>Sorties passées</div>
                </div>
            </div>
            <input class="Big-Btn" type="button" value="Rechercher">
        </div>
    </div>

    <div>
        <table>
            <thead>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">Inscrits/Places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>

                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.datedebut|date('Y-m-d') }}</td>
                    <td>{{ sortie.datecloture|date('Y-m-d') }}</td>
                    <td>{{ sortie.getInscriptions().count() }}/{{ sortie.inscriptionsmax }}</td>
                    <td>{{ sortie.getEtat().libelle }}</td>
                    <td class="txt-center">
                        {% for inscription in sortie.getInscriptions() %}
                            {% if inscription.getParticipant().getId() ==  user.id %}
                                X
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ sortie.getOrganisateur().pseudo }}</td>
                    <td class="txt-start">
                        {% if sortie.getEtat().libelle != 'En création' %}
                            <input type="button" value="Afficher">
                        {% endif %}

                        {% if user.id == sortie.getOrganisateur().id and sortie.getEtat().libelle == 'Ouvert' %}
                            - <input type="button" value="Annuler">
                        {% endif %}

                        {% set isUserRegistered = false %}

                        {% for inscription in sortie.getInscriptions() %}
                            {% if inscription.getParticipant().getId() == user.id %}
                                {% set isUserRegistered = true %}
                            {% endif %}
                        {% endfor %}

                        {% if isUserRegistered and sortie.getEtat().libelle == 'Ouvert' %}
                            - <input type="button" value="Se désister">
                        {% endif %}


                        {% set isUserRegistered = false %}

                        {% for inscription in sortie.getInscriptions() %}
                            {% if inscription.getParticipant().getId() == user.id %}
                                {% set isUserRegistered = true %}
                            {% endif %}
                        {% endfor %}

                        {% if not isUserRegistered and sortie.getEtat().libelle == 'Ouvert' %}
                            - <input type="button" value="S'inscrire">
                        {% endif %}

                    </td>


                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <input type="button" value="Créer une sortie">
{% endblock %}
