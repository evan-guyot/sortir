{% extends 'base.html.twig' %}
{% set showNavbar = true %}

{% block title %}Hello SortieController!{% endblock %}

{% block body %}
    <div class="form-group mx-20 my-5">
        <h1>Cr√©er une sortie</h1>
        {{ form_start(sortie_form) }}
        <div>

            <div class="row">
                <div class="col">
                    {{ form_start(site_form) }}
                    {{ form_row(site_form.nom) }}
                    {{ form_end(site_form) }}
                </div>
                <div class="col">
                    {{ form_row(sortie_form.nom) }}
                </div>
            </div>
        <div class="row">
            <div class="col">
                {{ form_row(sortie_form.datecloture) }}
            </div>
            <div class="col">
                {{ form_row(sortie_form.datedebut) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(sortie_form.inscriptionsmax) }}
            </div>
            <div class="col">
                {{ form_row(sortie_form.duree) }}
            </div>

            <div class="col">
                {{ form_row(sortie_form.lieu, { 'id': 'lieuSelect'}) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(sortie_form.description) }}
            </div>
        </div>
        <div class="row m-2">
            <div class="col">
                {{ form_row(sortie_form.enregister) }}
            </div>
            <div class="col">
                {{ form_row(sortie_form.publier) }}
            </div>
            <div class="col">
                <a class="btn btn-secondary form-control" role="button" href={{ path("app_sortie")}} >Annuler</a>
            </div>

        {{ form_end(sortie_form) }}
    </div>
{% endblock %}