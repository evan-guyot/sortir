{% extends 'base.html.twig' %}
{% set showExtendedNavbar = true %}

{% block body %}
    <div class="Layout-column-center g-5">

        <div class="Title txt-center">Ajouter des villes</div>
        <form class="mw-50 formAnnulation" action="{{ path('app_ville') }}" method="post">

            <div>
                <div>Saisir une nouvelle ville</div>
                <input class="form-control" type="text" name="ville">
            </div>
            <div>
                <div>Code postal</div>
                <input class="form-control" type="text" name="codpos">
            </div>

            <div class="Layout-column-center">
                <input type="submit" value="Ajouter" class="btn btn-primary">
            </div>
        </form>
    </div>
{% endblock %}
